<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="icon">@color/icons</item>
        <item name="divider">@color/divider</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="ConfirmationTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_confirmation</item>
        <item name="colorPrimaryDark">@color/primary_dark_confirmation</item>
        <item name="colorAccent">@color/accent_confirmation</item>
        <item name="icon">@color/icons_confirmation</item>
        <item name="divider">@color/divider_confirmation</item>
        <item name="android:textColorPrimary">@color/primary_text_confirmation</item>
        <item name="android:textColorSecondary">@color/secondary_text_confirmation</item>
    </style>

</resources>
